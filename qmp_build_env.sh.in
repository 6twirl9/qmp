#
# Files: QMP Environment variables
# Description: These environment variables may be useful to build 
#              applications on top of QMP. The declarations are .sh like
#              (lowest common denominator)


# The if then fi construction is so you can override these with 
# preset values from the shell

if test "x$QMP_COMMS_CFLAGS" == "x";
then 
	QMP_COMMS_CFLAGS="@QMP_COMMS_CFLAGS@"
	export QMP_COMMS_CFLAGS
fi

if test "x$QMP_COMMS_CXXFLAGS" == "x"; 
then  
	QMP_COMMS_CXXFLAGS="@QMP_COMMS_CFLAGS@"
	export QMP_COMMS_CXXFLAGS
fi

if test "x$QMP_COMMS_LDFLAGS" == "x";
then
	QMP_COMMS_LDFLAGS="@QMP_COMMS_LDFLAGS@"
	export QMP_COMMS_LDFLAGS
fi

if test "x$QMP_COMMS_LIBS" == "x";
then 
     	QMP_COMMS_LIBS="@QMP_COMMS_LIBS@"
   	export QMP_COMMS_LIBS
fi

if test "x$QMP_CFLAGS" == "x"; 
then 
	QMP_CFLAGS="-I@prefix@/include"
	export QMP_CFLAGS
fi

if test "x$QMP_CXXFLAGS" == "x";
then
	QMP_CXXFLAGS="-I@prefix@/include"
	export QMP_CXXFLAGS
fi

if test "x$QMP_LDFLAGS" == "x";
then
	QMP_LDFLAGS="-L@prefix@/lib"
	export QMP_LDFLAGS
fi

if test "x$QMP_LIBS" == "x";
then
	QMP_LIBS="-lqmp"
	export QMP_LIBS
fi
